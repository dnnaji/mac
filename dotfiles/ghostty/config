# Ghostty terminal configuration
# Adapted from Omarchy v3.2.0

# Theme
theme = catppuccin-mocha

# Font (use existing Nerd Font from Brewfile.casks)
font-family = FiraCode Nerd Font Mono
font-size = 14

# Window
window-height = 36
window-width = 160
window-padding-x = 16
window-padding-y = 16
macos-titlebar-style = tabs

# Cursor
cursor-style = block
cursor-style-blink = false

# Scrollback
scrollback-limit = 10000

# Split keybindings (Omarchy-style)
keybind = ctrl+shift+o=new_split:down
keybind = ctrl+shift+e=new_split:right
keybind = ctrl+alt+up=goto_split:top
keybind = ctrl+alt+down=goto_split:bottom
keybind = ctrl+alt+left=goto_split:left
keybind = ctrl+alt+right=goto_split:right
