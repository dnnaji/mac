# Brewfile.casks - GUI Applications
# Usage: brew bundle --file=Brewfile.casks

tap "nikitabobko/tap"  # For aerospace

# Terminals & Editors
cask "ghostty"          # Fast GPU terminal
cask "cursor"           # AI-powered editor
cask "zed"              # Fast collaborative editor
cask "antigravity"      # Google's agentic IDE (Gemini-powered)

# Dev Tools
cask "orbstack"         # Docker/Linux VMs (faster than Docker Desktop)
cask "bruno"            # API client (Postman alternative)

# Productivity
cask "raycast"          # Launcher (Spotlight replacement)
cask "arc"              # Browser
cask "rectangle"        # Window management (snap zones)
cask "nikitabobko/tap/aerospace"  # i3-like tiling window manager
cask "stats"            # System monitor in menubar
cask "itsycal"          # Menubar calendar
cask "maccy"            # Clipboard manager
cask "alt-tab"          # Better alt-tab
cask "hiddenbar"        # Hide menubar icons

# Fonts
cask "font-fira-code-nerd-font"
cask "font-geist-mono"
cask "font-hack-nerd-font"
cask "font-cascadia-code-nf"    # Microsoft's coding font + Nerd Font
