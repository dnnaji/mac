# Git configuration
# User config loaded from ~/.gitconfig.local (private overlay)

[include]
	path = ~/.gitconfig.local

[init]
	defaultBranch = main

[pull]
	rebase = true

[alias]
	a = add
	ca = commit -a
	cam = commit -am
	cm = commit -m
	s = status
	p = push
	pom = push origin master
	puom = pull origin master
	cob = checkout -b
	co = checkout
	fp = fetch --prune --all
	l = log --oneline --decorate --graph
	lall = log --oneline --decorate --graph --all
	ls = log --oneline --decorate --graph --stat
	lt = log --graph --decorate --pretty=format:'%C(yellow)%h%Creset%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)%an%Creset'

[credential]
	helper = osxkeychain

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true

[core]
	autocrlf = input
	# Uncomment if using delta for diffs
	# pager = delta

[interactive]
	# Uncomment if using delta
	# diffFilter = delta --color-only

# Uncomment to enable delta
# [delta]
# 	navigate = true
# 	light = false
# 	side-by-side = true
[push]
	autoSetupRemote = true
[fetch]
	prune = true
[rerere]
	enabled = true
